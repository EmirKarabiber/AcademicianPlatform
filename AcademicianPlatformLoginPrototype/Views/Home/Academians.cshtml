@model AcademicianWithDepartment

@{
    ViewData["Title"] = "View";
}

<style>
    #UserPhoto {
        width: 200px;
        height: 200px;
        object-fit: cover;
        display: block;
        margin: 0 auto;
    }
</style>
<h1 class="display-4 text-center">@Model.Department Akademisyenleri </h1>

        <hr />
        <div class="card-container">
            <div class="row">
                @foreach (var user in Model.Users)
                {
                    <div class="col-md-3 my-2">
                        <div class="card">
                            <img src="@user.ProfilePhotoPath" class="img-fluid display-inline profilePic my-2" id="UserPhoto" style="width: 200px;">
                            <h5 class="text-center">@user.Title @user.FirstName @user.LastName</h5>
                            <h6 class="text-center">@user.Department</h6>
                            <a asp-action="AcademicianDetails" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Detayları Görüntüle</a>
                        </div>
                    </div>
                }
            </div>
        </div>
   


